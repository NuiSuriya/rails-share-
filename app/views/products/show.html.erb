<div class="container">
  <div class="row card-big  d-flex justify-content-between">
    <div class="card-big-img col-6">
      <% if @product.photo.attached? %>
      <div class="card-category shadow" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('<%= cl_image_path @product.photo.key, height: 1000, crop: :fill %>')">
      </div>
      <% end %>
    </div>

    <div class="card-big-info d-flex flex-column col-6">
      <div class="card-product d-flex justify-content-between m-2">
        <div class="title">
          <h1><%= @product.name.upcase %></h2>
          <h4><strong><%= @product.category.capitalize %></strong></p>
        </div>

        <div class="price d-flex align-items-center">
          <p><%= @product.price  %>â‚¬/day</p>
        </div>
      </div>

      <div class="description flex-grow-1 m-2">
        <p>Description:<%= @product.description.capitalize %></p>
      </div>

      <div class="big-car-link">
        <%= link_to "Edit", edit_product_path, class:"btn btn-dark btn-lg" %>
        <%= link_to "Delete", product_path(@product), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"btn btn-dark btn-lg" %>
        <%= link_to "Book", new_product_booking_path(@product), class:" btn btn-dark btn-lg"%>
      </div>
    </div>
  </div>
</div>
