<h1>My bookings</h1>



<div class="card-small">
      <% @bookings.each do |booking|%>
        <div class='card'>
          <p>You've booked <strong><%= booking.product.name %></strong></p>
             <div class="card-img-top">
              <% if booking.product.photo.attached? %>
                <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path product.photo.key, height: 300, crop: :fill %>')">
                </div>
              <% end %>
            </div>

            <div class="card-body">
              <div class="card-text">
                <div class="card-info d-flex justify-content-between">
                  <div>
                    <p>from: <%= booking.start_date %></p>
                  </div>
                  <div>
                    <p>until: <%= booking.end_date %></p>
                  </div>
                </div>
              </div>
            </div>
      <% end %>

   </div>
