<div class="container text-center">

  <div class="d-flex justify-content-sm-center">
    <h1>You've booked <strong><%=@booking.product.name  %></strong>!</h1>
  </div>
  <%# <div class="card-small" > %>
    <div class="col-lg-6 mx-auto">
      <div class= "card">
        <div class="card-img-top">
          <% if @booking.product.photo.attached? %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @booking.product.photo.key, height: 300, crop: :fill %>')">
            </div>
          <% end %>
        </div>

        <p>
          <strong>From:</strong> <%= @booking.start_date.day %>
          /<%= @booking.start_date.month %>
          /<%= @booking.start_date.year %>
        </p>
        <p>
          <strong>Until:</strong> <%= @booking.end_date.day %>
          /<%= @booking.end_date.month %>
          /<%= @booking.end_date.year %>
        </p>
      </div>
    </div>

      <div class="button mt-2">
        <%= link_to "Looking for more stuff?", products_path, class:"btn btn-dark"%>
      </div>
    <%# </div> %>
</div>
